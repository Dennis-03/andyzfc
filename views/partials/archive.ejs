<div id="archive" class="tab-pane fade">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Heading</th>
        <th>Image Source</th>
        <th>Description</th>
        <th>Type</th>
        <th>Source</th>
        <th>Actions</th>
        <th style="width: 320px;">Dates</th>
      </tr>
    </thead>
    <tbody>
      <% news.forEach((news)=>{ %><% if (news.archive==true){ %>
      <tr>
        <th><%= news.newsHeader %></th>
        <td>
          <img src="<%= news.imageSrc %>" width="180" />
        </td>
        <td><%= news.description %></td>
        <td class="text-capitalize"><%= news.type %></td>
        <td><%= news.source %></td>
        <td>
          <button
            type="button"
            class="btn btn-danger"
            data-toggle="modal"
            data-target="#myModal"
            style="width: 98px;"
          >
            Delete
          </button>
          <a href="/admin/news/restore/<%= news.id %> ">
            <button class="btn btn-primary" style="width: 98px;">
              Restore
            </button>
          </a>
        </td>
        <td>
          Published:-&nbsp;&nbsp;&nbsp;&nbsp; <%=
          news.pubdate.toString().slice(3,15) %> / <%=
          news.pubdate.toString().slice(15,25) %>
          <br />
          Unpublished:- <%= news.unpubdate.toString().slice(0,15) %> / <%=
          news.unpubdate.toString().slice(15,25) %>
          <br />
          Archived:-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%=
          news.archdate.toString().slice(3,15) %> / <%=
          news.archdate.toString().slice(15,25) %>
        </td>
      </tr>

      <!-- The Modal -->
      <div class="modal fade" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Confirmation</h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
              Are you sure you want to delete this news? You can't undo this
              action
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
              <a href="/admin/news/delete/<%= news.id %> ">
                <button class="btn btn-danger">Delete</button>
              </a>
              <button
                type="button"
                class="btn btn-secondary align-center"
                data-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>

      <% } %> <% }) %>
    </tbody>
  </table>
</div>
